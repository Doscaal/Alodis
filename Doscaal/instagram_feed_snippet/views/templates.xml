<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="instagram_feed_snippet.s_instagram_feed" t-thumbnail="/instagram_feed_snippet/static/src/img/instagram.svg" />
        </xpath>
    </template>
    <template id="s_instagram_feed" name="Instagram Feed">
        <section class="s_instagram_feed mt32 mb32 oe_structure" contenteditable="false">
            <div id="instafeed" class="mt32 mb32 mx-1"></div>
            <div class="clearfix" />
            <div class="load_more mt32 mb32">
                <button>Load more</button>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="masterModal" tabindex="-1" role="dialog" contenteditable="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="close_btn">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span>&amp;times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="card">
                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="row" id="masterImg">
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="user">
                                            <span class="img" id="UserImage">
                                                <img class="img-thumbnail" src="" alt="" />
                                            </span>
                                            <span class="names">
                                                <span class="name" id="Username"></span><br/>
                                                <span class="post_date" id="PostDate"></span>
                                            </span>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="clearfix" />
                                        <div id="masterCaption"></div>
                                        <div class="clearfix" />
                                        <div class="insta_popup_footer">
                                            <!-- <div class="footer_buttons">
                                                <span class="insta_like"><i class="fa fa-heart-o"></i></span>
                                                <span class="insta_like">likes</span>
                                                <span class="insta_comment"><i class="fa fa-comment-o"></i></span>
                                                <span class="insta_share"><i class="fa fa-share-alt"></i></span>
                                                <span class="insta_save"><i class="fa fa-instagram"></i></span>
                                            </div> -->
                                            <div class="footer_social_media">
                                                <span class="o_default_snippet_text">Share <a id="fb_share" href="" target="_blank"><i class="fa fa-facebook"></i></a> <a id="tw_share" href="" target="_blank"><i class="fa fa-twitter"></i></a></span>
                                                <span class="o_default_snippet_text">View on Instagram <a id="in_share" href="" target="_blank"><i class="fa fa-instagram"></i></a></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix" />
                                </div>
                            </div>
                            <div class="clearfix" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>